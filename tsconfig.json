{
    "compilerOptions": {
        /* Visit https://aka.ms/tsconfig.json to read more about this file */
        "target": "esnext",
        "lib": ["dom", "esnext"],
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "src",
        "paths": {
            "@/assets/*": ["assets/*"],
            "@/pageSections/*": ["components/pageSections/*"],
            "@/shared/*": ["components/shared/*"],
            "@/localizationEn/*": ["localization/en/*"],
            "@/localizationRu/*": ["localization/ru/*"],
            "@/styles/*": ["styles/*"],
            "@/utils/*": ["utils/*"]
        }
    },
    "include": [
        "./src/**/*",
        "./gatsby-node.ts",
        "./gatsby-config.ts",
        "./plugins/**/*"
    ],
    "files": ["typings/styles.d.ts", "typings/images.d.ts"]
}
